@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Welcome @if(User.Identity.IsAuthenticated) { @User.Identity.Name }!</h1>
<hr />
@if(User.Identity.IsAuthenticated)
{
    <h3>Play!</h3>
    <hr />
    <input type="submit" class="btn btn-default" value="Log out" />
}
else
{
    <h3>@Html.ActionLink("Log In", "Login") or @Html.ActionLink("Register", "Register") to play.</h3>
}